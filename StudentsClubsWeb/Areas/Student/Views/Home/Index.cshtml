@using StudentsClubsWeb.Utilities
@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "الرئيسية";
    TempData[SD.NavActive.Home] = SD.NavActive.Activee;
}

<article>
    <section class="hero" id="home" aria-label="home">
        <div class="container">
            <div class="hero-content text-center" dir="rtl">
            <img src="page/index/images/shadow-2.svg" width="500" height="500" alt="" class="hero-bg hero-bg-2 noselect">
                @* <p class="hero-subtitle">Hello Everyone!</p> *@

                <h1 class="headline headline-1 section-title kfum-font">
                    Space <span class="span kfum-font">Clubs</span>
                    <br />
                    <span class="span kfum-font">فضاء</span> الأندية
                </h1>

                <p class="hero-text">
                        موقعنا يوفر للطلاب إمكانية البحث عن الأندية الطلابية والتواصل معها بسهولة من قبل الطلاب والمهتمين.
                         يمكن للمستخدمين إنشاء صفحة لناديهم ودعوة الآخرين للانضمام،
                         بالإضافة إلى نشر مشاركاتهم على صفحة النادي والتفاعل مع باقي الأعضاء.
                         كما يمكن لمديري النادي التحكم بالأعضاء والمشاركات بسهولة. نعتقد أن الانضمام إلى نادٍ طلابي 
                        يساهم في تطوير المهارات والمصالح الشخصية ويعزز
                         التجربة الأكاديمية والروابط الاجتماعية بين طلاب الجامعة
                </p>
                <div class="btn-group" dir="ltr">
                    <a class="btn w-btn w-btn-primary-revert btn-hero" asp-area="Student" asp-controller="Club" asp-action="Create">
                        سجل ناديك
                    </a>
                    <a id="browse-clubs-btn" class="btn w-btn w-btn-primary btn-hero" asp-area="Student" asp-controller="Club" asp-action="Index">
                        تصفح الأندية
                    </a>
                </div>
            </div>
            <img src="page/index/images/shadow-1.svg" width="1000" height="1500" alt="" class="hero-bg hero-bg-1 noselect">
            <!-- <img src="page/index/images/shadow-2.svg" width="500" height="500" alt="" class="hero-bg hero-bg-2 noselect"> -->
        </div>
    </section>
    <br /><br /><br /><br /><br />
    <div id="featuredDiv"> 

    </div>
</article>

