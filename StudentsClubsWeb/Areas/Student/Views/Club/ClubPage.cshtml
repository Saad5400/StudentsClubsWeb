                            >
                                قبول
                            </a>
                            <a class="btn w-btn w-btn-primary text-start float-start"
                               asp-area="Admin" asp-controller="ClubAdmin"
                               asp-action="RejectJoinClubRequest" asp-route-id="@request.Id">
                                رفض
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
}
