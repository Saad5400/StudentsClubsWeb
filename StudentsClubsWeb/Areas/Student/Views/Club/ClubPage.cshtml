@using StudentsClubsWeb.Utilities
@using System.Security.Claims
@using System.Text.RegularExpressions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ClubPageVM

@{
    ViewData["Title"] = Model.Club.Name;
    var isAdmin = Model.Club.ClubAdmins.Any(cd => cd.AdminId == User.FindFirstValue(ClaimTypes.NameIdentifier));
    var isMember = Model.Club.Members.Any(m => m.Id == User.FindFirstValue(ClaimTypes.NameIdentifier));
}

<style>
    .note-video-clip {
        width: max-content;
        height: fit-content;
    }
</style>

@if (ViewBag.Message != null)
{
    <div class="alert alert-dismissible alert-light">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @ViewBag.Message
    </div>
}

<div class="mt-3">

</div>
<div class="row">
    <div class="col">
        <h2 class="">
            @Model.Club.Name
        </h2>
    </div>
    <div class="col text-start">
        <div>
            @if (isAdmin || isMember)
            {
                // display a button to add a new post
                <a class="btn btn-success" asp-area="Student" asp-controller="Post" asp-action="Create" asp-route-clubId="@Model.Club.Id">
                    اضافة منشور
                </a>
            }
            else
            {
                // display a button with "طلب التسجيل"
                <a class="btn btn-success" asp-area="Student" asp-controller="Club" asp-action="RequestJoinClub" asp-route-clubId="@Model.Club.Id">
                    طلب التسجيل
                </a>
            }
        </div>
    </div>
</div>

<hr/>


<div class="my-2">

</div>
@if (Model.Club.Posts.Count > 0)
{
    <h5>
        اخر المنشورات
    </h5>
}
<div class="row">
    @foreach (var post in Model.Club.Posts)
{
    <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="my-auto">
                    @post.Title
                </h6>
            </div>
            <div class="card-body">
                <p class="card-text">
                    @Html.Raw(Regex.Replace(post.Content, @"<script\b[^<]*(?:(?!</script>)<[^<]*)*</script>", string.Empty, RegexOptions.IgnoreCase))
                </p>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-6">
                        <h6 class="my-auto">
                            @post.CreatedAt
                        </h6>
                    </div>
                    <div class="col-6">
                        <h6 class="my-auto">
                            @post.Author.DisplayUsername
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
</div>
<h5 class="mt-5">
    الادارة
</h5>
<div>
    <table class="table table-hover">
        <tr>
            <th>الاسم</th>
            <th>اسم المستخدم</th>
            <th>البريد</th>
        </tr>
        @foreach (var admin in Model.Club.ClubAdmins.Select(cd => cd.Admin))
        {
            <tr>
                <td>@(admin.FirstName + " " + admin.LastName)</td>
                <td>@admin.DisplayUsername</td>
                <td>@admin.Email</td>
            </tr>
        }
    </table>
</div>
<h5>
    الاعضاء
</h5>
<div>
    <table class="table table-hover">
        @if (isAdmin)
        {
            <tr>
                <th>اسم المستخدم</th>
                <th>البريد</th>
                <th>خيارات</th>
            </tr>
            @foreach (var request in Model.JoinClubRequests)
            {
                <tr>
                    <td>@request.User.DisplayUsername</td>
                    <td>@request.User.SchoolEmail</td>
                    <td>
                        <div class="btn-group" dir="ltr">
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="ClubAdmin"
                               asp-action="RejectJoinClubRequest" asp-route-id="@request.Id">
                                رفض
                            </a>
                            <a class="btn btn-success" asp-area="Admin" asp-controller="ClubAdmin"
                                asp-action="AcceptJoinClubRequest" asp-route-id="@request.Id">
                                قبول
                            </a>
                        </div>
                    </td>
                </tr>
            }
            @foreach (var user in Model.Club.Members)
            {
                <tr>
                    <td>@user.DisplayUsername</td>
                    <td>@user.SchoolEmail</td>
                    <td>
                        <div class="btn-group" dir="ltr">
                            <a class="btn btn-danger" href="/Admin/ClubAdmin/KickUser/@Model.Club.Id/@user.Id">
                                طرد
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th>اسم المستخدم</th>
                <th>البريد العام</th>
            </tr>
            @foreach (var user in Model.Club.Members)
            {
                <tr>
                    <td>@user.DisplayUsername</td>
                    <td>@user.SchoolEmail</td>
                </tr>
            }
        }
    </table>
</div>