@if (Model.Club.Posts.Count > 0)
{
<h5 class="headline-3 title2">
    <span class="span">
        المنشورات
    </span>
</h5>

    <div class="row">
        @foreach (var post in Model.Club.Posts)
        {
            <div class="col-lg-6">
                <div class="w-card aside-card my-3">
                    <div class="card-header mb-3">
                        @foreach (var tag in post.Tags.Select(t => t.Title))
                        {
                            <span class="badge card-badge">
                                @tag
                            </span>
                        }
                    </div>
                    <div class="card-body pb-1">
                        <h3 class="headline headline-3 card-title">
                            <div class="club-info" style="display: flex; align-items: center;">
                                <img class="me-0 ms-3" src="@post.Image" width="100" height="100" loading="lazy" style="margin-right: 10px;">
                                <a class="link hover-2" asp-area="Student" asp-controller="Post" asp-action="PostPage" asp-route-id="@post.Id">
                                    <span>@post.Title</span>
                                </a>
                            </div>
                        </h3>
                        <h6 class="card-title">
                            @(post.Summary.Length > 100 ? post.Summary.Substring(0, 100) + "..." : post.Summary)
                        </h6>
                    </div>
                </div>
            </div>
        }
    </div>
}

